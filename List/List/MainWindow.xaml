<Window x:Class="List.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:List"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="lbl_Shopping_List" Content="To Dos" HorizontalAlignment="Left" Margin="34,20,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lbx_List" HorizontalAlignment="Left" Height="142" Margin="34,51,0,0" VerticalAlignment="Top" Width="111"/>
        <Label Content="Item:" HorizontalAlignment="Left" Margin="306,51,0,0" VerticalAlignment="Top" Height="25" Width="37"/>
        <TextBox x:Name="tbx_Item" HorizontalAlignment="Left" Height="23" Margin="348,55,0,0" TextWrapping="Wrap" Text="Item Name" VerticalAlignment="Top" Width="120" Opacity="0.5" GotFocus="tbx_Item_GotFocus"/>
        <Button x:Name="btn_ADD" Content="Add" HorizontalAlignment="Left" Margin="393,83,0,0" VerticalAlignment="Top" Width="75" Click="btn_ADD_Click"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="393,178,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
